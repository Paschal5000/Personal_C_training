#include<stdio.h>

// A program to find the greatest
// of four numbers

int max(int x, int y){
    if (x > y)
    return x;
    else
    return y;
}

int main()
{
    int a, b, c, d;
    printf("Enter first number:");
    scanf("%d", &a);
    
    printf("Enter second number:");
    scanf("%d", &b);
    
    printf("Enter third number:");
    scanf("%d", &c);
    
    printf("Enter fourth number:");
    scanf("%d", &d);
    
    int left_max = max(a, b);
    int right_max = max(c, d);
    int final_max = max(left_max, right_max);
    printf("The Maximum number is: %d" );
    
    return 0;
}
